.Left__contents
  .LeftHeader
    .LeftHeader__list
      .LeftHeader__user
        = current_user.name
      .LeftHeader__iconList
        = link_to "/groups/new" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message
